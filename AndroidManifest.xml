<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flavu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.flavu.activities.Feed"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.flavu.activities.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.flavu.activities.Post"
            android:label="@string/title_activity_post" >
        </activity>
        <activity
            android:name="com.flavu.activities.Flavorites"
            android:label="@string/title_activity_flavorites" >
        </activity>
        <activity
    		android:name="com.flavu.activities.Branch"
            android:label="@string/title_activity_branch" >
        </activity>
    </application>

</manifest>
